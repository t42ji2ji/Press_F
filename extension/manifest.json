{
  "manifest_version": 3,
  "name": "Press F",
  "version": "1.0",
  "description": "Quickly reply to tweets with @payrespectbot by hovering and pressing F",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 